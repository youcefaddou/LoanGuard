model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  password     String
  name         String
  role         String
  companyId    Int?
  company      Company?    @relation(fields: [companyId], references: [id])
  activityLogs ActivityLog[]
  userBanks    UserBank[]
  loans        Loan[]
  reports      Report[]
}